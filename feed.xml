---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

    <title>crodjer's blogRoll</title>
    <link href="http://{{ site.domain }}/atom.xml" rel="self"/>
    <link href="http://{{ site.domain }}/"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>http://{{ site.domain }}/</id>
    <author>
        <name>Rohan Jain</name>
        <email>crodjer@gmail.com</email>
    </author>

    {% for post in site.posts %}
    <entry>
        <title>{{ post.title }}</title>
        <link href="http://{{ site.domain }}{{ site.baseurl }}{{ post.id }}"/>
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        <id>http://{{ site.domain }}{{ site.baseurl }}{{ post.id }}</id>
        {% for category in post.categories %}
        <category term="{{ category | downcase }}" />
        {% endfor %}
        <content type="html">{{ post.content | xml_escape }}</content>
    </entry>
    {% endfor %}

</feed>
